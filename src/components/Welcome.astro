---
import ballena from "../assets/ballena.png";
import Instagram from "../../public/instagram.svg";
import Wapp from "../../public/wapp.svg";
import scuba from "../assets/scuba.jpg";
import { Image } from "astro:assets";
---

<div id="container">
  <img id="ballena" src={ballena.src} alt="" fetchpriority="high" />
  <div id="overlay"></div>
  <div id="badge">
    <img id="badge-image" src={scuba.src} alt="" fetchpriority="high" />
  </div>

  <div id="buttons">
    <a
      href="https://wa.me/542804578779"
      target="_blank"
      rel="noopener noreferrer"
      class="button"
    >
      <span class="glass-top"></span>
      <span class="glass-left"></span>
      <Wapp />  
    </a>
    <a
      href="https://instagram.com/facujoaquin"
      target="_blank"
      rel="noopener noreferrer"
      class="button"
    >
      <span class="glass-top"></span>
      <span class="glass-left"></span>
      <Instagram />

    </a>
  </div>
</div>

<style>
  #ballena {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -2;
  }

  #overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.2);
    z-index: -1;
    pointer-events: none;
  }

  #container {
    font-family: Inter, Roboto, "Helvetica Neue", "Arial Nova", "Nimbus Sans",
      Arial, sans-serif;
    min-height: 100vh;
    height: 100vh;
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: 1.5rem;
    box-sizing: border-box;
    position: relative;
  }

  #badge {
    position: fixed;
    top: 1.5rem;
    right: 1.5rem;
    width: 80px;
    height: 80px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid rgba(128, 128, 128, 0.5);
    z-index: 10;
    pointer-events: none;
  }

  #badge-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
  }

  #buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    z-index: 1;
    width: 100%;
    max-width: 400px;
    box-sizing: border-box;
  }

  #buttons .button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: 14px 24px;
    color: #1a1a1a;
    text-decoration: none;
    background: transparent;
    border-radius: 10px;
    border: 1px solid rgba(255, 255, 255, 0.3);
    box-shadow:
      0 8px 32px rgba(0, 0, 0, 0.05),
      inset 0 1px 0 rgba(255, 255, 255, 0.3),
      inset 0 -1px 0 rgba(255, 255, 255, 0.05),
      inset 0 0 20px 10px rgba(255, 255, 255, 0.05);
    transition: all 0.2s ease;
    font-weight: 500;
    position: relative;
    overflow: hidden;
    z-index: 0;
    width: 100%;
    box-sizing: border-box;
  }

  #buttons .button::before {
    content: "";
    position: absolute;
    inset: -2px;
    border-radius: 12px;
    background: conic-gradient(
      from 0deg,
      transparent,
      transparent 30%,
      rgba(255, 255, 255, 0.8) 50%,
      transparent 70%,
      transparent
    );
    opacity: 0;
    transition: opacity 0.3s ease;
    animation: borderRotate 3s linear infinite;
    animation-play-state: paused;
    z-index: -2;
  }

  #buttons .button::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 10px;
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    z-index: -1;
    pointer-events: none;
  }

  #buttons .button:hover::before {
    opacity: 1;
    animation-play-state: running;
  }

  @keyframes borderRotate {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  #buttons .button:hover {
    box-shadow:
      0 8px 32px rgba(0, 0, 0, 0.08),
      inset 0 1px 0 rgba(255, 255, 255, 0.4),
      inset 0 -1px 0 rgba(255, 255, 255, 0.08),
      inset 0 0 20px 10px rgba(255, 255, 255, 0.08);
  }

  #buttons .button:hover::after {
    background: rgba(255, 255, 255, 0.12);
  }

  #buttons .button .icon,
  #buttons .button > span:not(.glass-top):not(.glass-left) {
    position: relative;
    z-index: 1;
  }

  #buttons .button .icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
    fill: #1a1a1a;
  }

  #buttons .button img.icon {
    width: auto;
    height: 20px;
    object-fit: contain;
  }

  #buttons .button .glass-top {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.8),
      transparent
    );
    z-index: 2;
    pointer-events: none;
  }

  #buttons .button .glass-left {
    position: absolute;
    top: 0;
    left: 0;
    width: 1px;
    height: 100%;
    background: linear-gradient(
      180deg,
      rgba(255, 255, 255, 0.8),
      transparent,
      rgba(255, 255, 255, 0.3)
    );
    z-index: 2;
    pointer-events: none;
  }

  @media screen and (max-width: 768px) {
    #container {
      padding: 1.25rem;
    }

    #badge {
      width: 70px;
      height: 70px;
      padding: 5px;
      top: 1.25rem;
      right: 1.25rem;
    }

    #buttons {
      width: 100%;
      max-width: 100%;
      gap: 0.875rem;
    }

    #buttons .button {
      padding: 16px 20px;
      font-size: 16px;
    }

    #buttons .button .icon {
      width: 22px;
      height: 22px;
    }
  }

  @media screen and (max-width: 480px) {
    #container {
      padding: 1rem;
    }

    #badge {
      width: 60px;
      height: 60px;
      padding: 4px;
      top: 1rem;
      right: 1rem;
    }

    #buttons {
      gap: 0.75rem;
    }

    #buttons .button {
      padding: 14px 18px;
      font-size: 15px;
    }

    #buttons .button .icon {
      width: 20px;
      height: 20px;
    }
  }
</style>
